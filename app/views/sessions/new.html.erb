<p id='alert'><%= alert %></p>
<h1>Login</h1><br>
<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
<div class=”field”>
<%=form.label :email %>
<%= form.text_field :email %>
</div>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<div class='field'>
<%= form.label :password %>
<%= form.password_field :password %>
</div>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<div class='actions'>
<%= form.submit 'Login'%>
</div>
<% end %>



